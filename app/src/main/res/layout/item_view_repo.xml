<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bordered_line_square">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_half_margin"
        android:background="@drawable/background_bordered_line_square"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/pro_pic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_horizontal_double_margin"
                android:layout_height="@dimen/activity_horizontal_double_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/auth_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_horizontal_half_margin"
                android:paddingEnd="@dimen/activity_horizontal_half_margin"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/profile_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="@dimen/activity_vertical_quart_margin"
                    android:text="kazunka"
                    android:textColor="@color/text_color_sub_title"
                    android:textSize="@dimen/paragraph"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="telegraph-android"
            android:layout_marginTop="@dimen/activity_horizontal_quart_margin"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/paragraph"
            android:layout_below="@id/pro_pic_container"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="Telegraph X Android Client"
            android:textColor="@color/text_color_sub_title"
            android:textSize="@dimen/paragraph"
            android:layout_below="@id/repo_name"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/repo_description"
            android:weightSum="20">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_profile_rate"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/repo_stars"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="75"
                android:textColor="@color/text_color_sub_title"
                android:textSize="@dimen/paragraph"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_profile_type"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/repo_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="start|center_vertical"
                android:text="Kotlin"
                android:textColor="@color/text_color_sub_title"
                android:textSize="@dimen/paragraph"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>